<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ensure the public folder is correctly handled
    RewriteRule ^$ public/index.php [L]
    RewriteRule ^((?!public/).*)$ public/$1 [L,NC]

    # Add a rule to handle static assets like CSS, JS, and images
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(assets|css|js|images)/(.*)$ public/$1/$2 [L]
</IfModule>
